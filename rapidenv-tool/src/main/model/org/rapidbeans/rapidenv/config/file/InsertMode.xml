<enumtype name="org.rapidbeans.rapidenv.config.file.InsertMode">
	<description>Determines if to append or to prepend so text in
the configuration file.</description>
	<enum name="append">
		<description>Append some (lines of) text in the configuration file.</description>
	</enum>
	<enum name="prepend">
		<description>Prepend some (lines of) text in the configuration file.</description>
	</enum>
</enumtype>
