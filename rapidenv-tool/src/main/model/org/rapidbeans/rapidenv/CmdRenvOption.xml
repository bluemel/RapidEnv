<enumtype name="org.rapidbeans.rapidenv.CmdRenvOption">
	<header>
		<column name="short1" type="String"/>
		<column name="argcount" type="Integer"/>
	</header>
	<enum name="debug">
		<description>debug log level</description>
		<cell name="short1" value="d"/>
		<cell name="argcount" value="0"/>
	</enum>
	<enum name="env">
		<description>the folder or file containing the project environment settings file.
If it is a folder the settings files is assumed to be 'env.xml'</description>
		<cell name="short1" value="e"/>
		<cell name="argcount" value="1"/>
		<cell name="description" value=""/>
	</enum>
	<enum name="force">
		<description>forces update regardless if something is uptodate or not</description>
		<cell name="short1" value="f"/>
		<cell name="argcount" value="0"/>
	</enum>
		<enum name="verbose">
		<description>verbose log level</description>
		<cell name="short1" value="v"/>
		<cell name="argcount" value="0"/>
	</enum>
	<enum name="yes">
		<description>batch (yes) run mode without user interaction.
			If you use this option the "boot", "update", or "configuration"
			will run without user interaction which causes personal properties to get the default values.
			Yes / No questions (do you really want to...?) will be automatically answered with "Yes".</description>
		<cell name="short1" value="y"/>
		<cell name="argcount" value="0"/>
	</enum>
</enumtype>
