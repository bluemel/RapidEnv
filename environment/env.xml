	<installunit name="rapidenv-eclipseheadless" version="1.0.0"
		sourceurl="http://www.muenchen-surf.de/bluemel/software/rapidbeans/releases/latest/rapidenv-eclipseheadless-1.0.0.zip"
		removerootdirs="true"
		>
