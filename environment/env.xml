	<!--
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
		Ant build system
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
	-->
	<installunit name="ant" version="1.8.2"
		sourceurl="http://archive.apache.org/dist/ant/binaries/apache-ant-''version()-bin.zip"
		depends="jdk">
		<subunit space="xalan" name="xalan" version="2.7.1"
			installmode="put" homedir="lib"
			sourceurl="http://repo1.maven.org/maven2/xalan/xalan/''version()/xalan-''version().jar"/>
		<subunit space="xalan" name="serializer" version="2.7.1"
			installmode="put" homedir="lib"
			sourceurl="http://repo1.maven.org/maven2/xalan/serializer/''version()/serializer-''version().jar"/>
		<property name="home" category="common"
			value="homedir()"
			valuetype="file" filetype="directory"
			mustExist="true" createIfNotExist="true"
			>
			<environment name="ANT_HOME"/>
		</property>
		<propextension property="cmd.path" propextmode="prepend" value="homedir()/bin"/>
		<command osfamily="linux"
			installphase="postinstall"
			workingdir="homedir()/bin"
			executable="chmod"
			>
			<argument value="a+x"/>
			<argument value="ant"/>
			<argument value="antRun"/>
		</command>
	</installunit>

	<!--
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
		Maven build system
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
	-->
	<installunit name="maven" version="2.2.1"
		sourceurl="http://mirror.netcologne.de/apache.org/maven/binaries/apache-maven-''version()-bin.zip"
		depends="jdk">
		<property name="repo" category="personal"
			valuetype="file" filetype="directory"
			mustExist="true" createIfNotExist="true"
			value="${rapidbeans.home}/mavenrepo"
			>
			<description>The local Maven repository</description>
			<environment name="M2_REPO"/>
		</property>
		<property name="home" category="common"
			value="homedir()"
			valuetype="file" filetype="directory"
			>
			<environment name="M2_HOME"/>
		</property>
		<xmlfile path="conf/settings.xml"
			sourceurl="file:${rapid.env.project.home}/environment/config/maven/settings.xml">
			<setnodevalue path="//settings/localRepository" value="${maven.repo}"/>
		</xmlfile>
		<command osfamily="linux"
			installphase="postinstall"
			workingdir="homedir()/bin"
			executable="chmod"
			>
			<argument value="a+x"/>
			<argument value="mvn"/>
		</command>
	</installunit>

	<!--
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
