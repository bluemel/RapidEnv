<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE project SYSTEM "env.dtd">

<project
	name="RapidEnv"
	tag="${rapidbeans.tag}"
	installsourceurl="${rapidbeans.tools.site.local}"
	installtargetdir="${rapidbeans.tools.home}"
	>

	<!--
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
		Environment properties
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
	-->
	<property name="rapidbeans.tag" category="personal"
		value="main"
		>
		<description>The tag defines an id which together with the project name
uniquely defines a development environment on your machine.</description>
		<environment name="RAPIDBEANS_TAG"/>
	</property>

	<property name="rapidbeans.home" category="personal"
		valuetype="file" filetype="directory"
		mustExist="true" createIfNotExist="true"
		value=".."
		>
		<description>Your local development tree root</description>
		<environment name="RAPIDBEANS_HOME"/>
	</property>

	<property name="rapidbeans.tools.home" category="personal"
		valuetype="file" filetype="directory"
		mustExist="true" createIfNotExist="true"
		value="${rapidbeans.home}/tools"
		>
		<description>Your local tools installation folder</description>
		<environment name="RAPIDBEANS_TOOLS_HOME"/>
	</property>

	<property name="rapidbeans.tools.site.local" category="personal"
		valuetype="url" filetype="directory"
		mustExist="true" createIfNotExist="true"
		value="file:D:/ArchiveSoftware/Develop/Java"
		>
		<specificvalue osfamily="windows">
			<value>file:D:/ArchiveSoftware/Develop/Java</value>
		</specificvalue>
		<specificvalue osfamily="linux">
			<value>file:''userhome()/ArchiveSoftware/Develop/Java</value>
		</specificvalue>
		<description>Your local tools installation site</description>
		<environment name="RAPIDBEANS_TOOLS_SITE"/>
	</property>

	<property name="user.home" category="personal"
		valuetype="string">
		<description>Your home directory for GIT ssh configuration and so on</description>
		<specificvalue osfamily="windows">
			<value>environment('USERPROFILE')</value>
		</specificvalue>
		<specificvalue osfamily="linux">
			<value>environment('HOME')</value>
		</specificvalue>
		<environment name="HOME"/>
	</property>

	<property name="cmd.path.user" category="personal"
		valuetype="string">
		<description>Your personal path of the command path</description>
		<specificvalue osfamily="windows">
			<value>environment('Path')</value>
		</specificvalue>
		<specificvalue osfamily="linux">
			<value>environment('PATH')</value>
		</specificvalue>
	</property>

	<property name="rapid.env.project.home" category="common"
		valuetype="file" filetype="directory"
		mustExist="true"
		value="${rapidbeans.home}"
		>
		<description>The common form of the local development tree root</description>
		<environment name="RAPID_ENV_PROJECT_HOME"/>
	</property>

	<property name="cmd.path" category="common"
		valuetype="path" value="${cmd.path.user}">
		<environment osfamily="linux" name="PATH"/>
		<environment osfamily="windows" name="Path"/>
		<extension propextmode="prepend" value="environment('RAPID_ENV_HOME')/bin"/>
	</property>

	<!--
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
		Java Development Kit
		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
	-->
	<installunit name="jdk" version="1.6.0_26"
		sourceurl="http://download.oracle.com/otn-pub/java/jdk/6u26-b03/jdk-6u26-''osname()-''architecture('x86=i586;i386=i586-rpm;x86_64=-x86_64').''packaging('windows=exe;linux=bin')"
		>
		<sourcefilecheck
			osfamily="windows"
			hashalgorithm="MD5"
			hashvalue="8832d79ba8bed47bf247e36aa3881423"
			/>
		<sourcefilecheck
			osfamily="linux"
			hashalgorithm="MD5"
			hashvalue="e9e08153c09d385cd5379b80b4b95661"
			/>
		<propextension property="cmd.path" propextmode="prepend" value="homedir()/bin"/>
		<property name="home" category="common"
			value="homedir()"
			valuetype="file" filetype="directory"
			mustExist="true" createIfNotExist="true"
			>
			<environment name="JAVA_HOME"/>
		</property>
		<property name="java" category="common"
			value="homedir()/bin/java"
			valuetype="file" filetype="directory"
			mustExist="true" createIfNotExist="true"
			>
			<environment name="JAVA"/>
			<specificvalue osfamily="windows">
				<value>homedir()\bin\java.exe</value>
			</specificvalue>
		</property>

		<!-- Automated packaging -->
		<command
			osfamily="windows"
			executable="cmd.exe"
			silent="false"
			installphase="preinstall"
			>
			<verifycmd executable="cmd.exe"
				silent="true">
				<argument value="/C"/>
				<argument value="dir"/>
				<argument value="pathconvertc(${rapidbeans.tools.site.local}/jdk/''version()/jdk-''version()-''osname()-''architecture().zip)"/>
				<return equals="0"/>
			</verifycmd>
			<messagestart>  - installing Oracle JDK 1.6.0_26 using (the official) windows installer...</messagestart>
			<argument value="/C"/>
			<argument value="start"/>
			<argument value="/w"/>
			<argument value="${rapidbeans.tools.site.local}\jdk\''version()\jdk-6u26-windows-i586.exe"/>
			<argument value="/s"/>
			<argument
				value="/qn INSTALLDIR=''pathconvertc(${rapidbeans.tools.home}/jdk-''version())"
				/>
		</command>
		<command
			osfamily="linux"
			executable="sudo"
			workingdir="pathconvertc(${rapidbeans.tools.site.local}/jdk/''version())"
			silent="false"
			installphase="preinstall"
			>
			<verifycmd executable="ls"
				silent="true">
				<argument value="pathconvertc(${rapidbeans.tools.site.local}/jdk/''version()/jdk-''version()-''osname()-''architecture().zip)"/>
				<return equals="0"/>
			</verifycmd>
			<messagestart>  - installing Oracle JDK 1.6.0_26 using (the official) Linux installer...</messagestart>
			<argument value="sh"/>
			<argument value="-c"/>
			<argument value="chmod a+x jdk-6u26-linux-i586-rpm.bin &amp;&amp; ./jdk-6u26-linux-i586-rpm.bin"/>
			<input>A

</input>
		</command>

		<anttask
			osfamily="windows"
			anttaskname="zip"
			installphase="preinstall"
			>
			<verifycmd
				executable="cmd.exe"
				silent="true"
				>
				<argument value="/C"/>
				<argument value="dir"/>
				<argument value="pathconvertc(${rapidbeans.tools.site.local}/jdk/''version()/jdk-''version()-''osname()-''architecture().zip)"/>
				<return equals="0"/>
			</verifycmd>
			<argument name="basedir"
				value="pathconvert(${rapidbeans.tools.home}, '/')/jdk-''version()"
				valuetype="file"
				/>
			<argument name="destFile"
				value="pathconvert(${rapidbeans.tools.site.local}, '/')/jdk/''version()/jdk-''version()-''osname()-''architecture().zip"
				valuetype="file"
				/>
		</anttask>
		<anttask
			osfamily="linux"
			anttaskname="zip"
			installphase="preinstall"
			>
			<verifycmd
				osfamily="linux"
				executable="ls"
				silent="true"
				>
				<argument value="pathconvertc(${rapidbeans.tools.site.local}/jdk/''version()/jdk-''version()-''osname()-''architecture().zip)"/>
				<return equals="0"/>
			</verifycmd>
			<argument name="basedir"
				value="/usr/java/jdk1.6.0_26"
				valuetype="file"
				/>
			<argument name="destFile"
				value="pathconvert(${rapidbeans.tools.site.local}, '/')/jdk/''version()/jdk-''version()-''osname()-''architecture().zip"
				valuetype="file"
				/>
		</anttask>

		<command
			osfamily="windows"
			executable="cmd.exe"
			silent="false"
			installphase="preinstall"
			>
			<verifycmd executable="cmd.exe"
				silent="true">
				<argument value="/C"/>
				<argument value="dir"/>
				<argument value="pathconvertc(${rapidbeans.tools.home}/jdk-''version())"/>
				<return equals="1"/>
			</verifycmd>
			<messagestart>  - uninstalling Oracle JDK 1.6.0_26 using (the official) windows installer...</messagestart>
			<argument value="/C"/>
			<argument value="start"/>
			<argument value="/w"/>
			<argument value="msiexec.exe"/>
			<argument value="/qn"/>
			<argument value="/x"/>
			<argument value="{32A3A4F4-B792-11D6-A78A-00B0D0160260}"/>
		</command>
		<command
			osfamily="linux"
			executable="sudo"
			silent="false"
			installphase="preinstall"
			>
			<verifycmd executable="ls"
				silent="true">
				<argument value="/usr/java/jdk1.6.0_26"/>
				<return equals="2"/>
			</verifycmd>
			<messagestart>  - uninstalling Oracle JDK 1.6.0_26 using (the official) windows installer...</messagestart>
			<argument value="rpm"/>
			<argument value="-e"/>
			<argument value="jdk"/>
		</command>

		<command osfamily="linux"
			installphase="postinstall"
			workingdir="homedir()/bin"
			executable="sh"
			>
			<argument value="${rapidbeans.home}/environment/config/setExecutable.sh"/>
		</command>
		<command osfamily="linux"
			installphase="postinstall"
			workingdir="homedir()/jre/bin"
			executable="sh"
			>
			<argument value="${rapidbeans.home}/environment/config/setExecutable.sh"/>
		</command>

		<subunit name="jdk-apidoc" version="1.6.0"
			homedir="docs"
			/>

	</installunit>

