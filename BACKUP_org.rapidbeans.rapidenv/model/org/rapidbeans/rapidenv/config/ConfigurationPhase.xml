<enumtype name="org.rapidbeans.rapidenv.config.ConfigurationPhase">
	<description>The phase when the configuration is executed</description>
	<enum name="preinstall">
		<description>before first or update installation</description>
	</enum>
	<enum name="postinstall">
		<description>after first or update installation only</description>
	</enum>
	<enum name="config">
		<description>after first or update installation or during explicit configuration
which is automatically done if executing the update command or the config command.</description>
	</enum>
	<enum name="predeinstall">
		<description>before removing the installation</description>
	</enum>
	<enum name="postdeinstall">
		<description>after removing the installation</description>
	</enum>
</enumtype>
