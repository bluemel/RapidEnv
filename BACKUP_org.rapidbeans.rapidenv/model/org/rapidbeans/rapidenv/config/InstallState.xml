<enumtype name="org.rapidbeans.rapidenv.config.InstallState">
	<description>Describes the different mode to install software.</description>
	<enum name="installing">
		<description>This state is set during installation.</description>
	</enum>
	<enum name="installed">
		<description>This state shows that the install unit is installed properly.</description>
	</enum>
	<enum name="deinstalling">
		<description>This state is set during installation removal.</description>
	</enum>
</enumtype>
