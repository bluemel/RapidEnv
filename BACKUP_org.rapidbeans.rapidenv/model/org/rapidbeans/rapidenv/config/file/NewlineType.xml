<enumtype name="org.rapidbeans.rapidenv.config.file.NewlineType">
	<description>Defines newline character(s).</description>
	<enum name="platform">
		<description>The platform specific newline character.</description>
	</enum>
	<enum name="lf">
		<description>Simple newline with one single line feed sign.</description>
	</enum>
	<enum name="crlf">
		<description>Windows specific newline character combination:
			carriage return + line feed</description>
	</enum>
</enumtype>
