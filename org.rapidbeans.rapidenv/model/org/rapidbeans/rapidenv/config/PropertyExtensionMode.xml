<enumtype name="org.rapidbeans.rapidenv.config.PropertyExtensionMode">
	<description>Determines how to extend a path like property.</description>
	<enum name="prepend">
		<description>
			Prepend the path extension.
		</description>
	</enum>
	<enum name="append">
		<description>
			Append the path extension.
		</description>
	</enum>
	<enum name="remove">
		<description>
			Remove an unwanted path extension.
		</description>
	</enum>
</enumtype>
