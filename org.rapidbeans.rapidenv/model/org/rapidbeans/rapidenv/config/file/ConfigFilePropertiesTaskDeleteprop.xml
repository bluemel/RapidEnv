<beantype name="org.rapidbeans.rapidenv.config.file.ConfigFilePropertiesTaskDeleteprop"
	extends="org.rapidbeans.rapidenv.config.ConfigurationTask">

	<description>Deletes a distinct property identified by its name and optionally an additional section name.</description>

	<property name="section" type="string">
		<description>The section of the property to delete.</description>
	</property>

	<property name="name" type="string"
		mandatory="true">
		<description>The name of the property to delete.</description>
	</property>

	<codegen mode="split" implementation="strict"/>
</beantype>
