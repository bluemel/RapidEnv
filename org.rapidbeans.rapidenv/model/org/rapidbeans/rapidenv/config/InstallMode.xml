<enumtype name="org.rapidbeans.rapidenv.config.InstallMode">
	<description>Describes the different mode to install software.</description>
	<enum name="put">
		<description>Simply put a single file into the specified folder.</description>
	</enum>
	<enum name="unpack">
		<description>Unpack a zip, jar, or tar file.</description>
	</enum>
	<enum name="execute">
		<description>Execute an installer.</description>
	</enum>
</enumtype>
