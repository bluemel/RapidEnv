<beantype name="org.rapidbeans.rapidenv.config.expr.ConfigExprFunctionSubstractextensions"
	extends="org.rapidbeans.rapidenv.config.expr.ConfigExprFunction">

	<description>Very special function need for recursive definitions of path properties with extensions.
It causes extenstions to be substracted from a path property before it ia expanded again.</description>

	<property name="pathofpaths" mandatory="true">
		<description>The path string to convert.</description>
	</property>

	<property name="returnval">
		<description>The path with extensions of the enclosing property substracted.</description>
	</property>

	<codegen mode="split"/>

</beantype>
