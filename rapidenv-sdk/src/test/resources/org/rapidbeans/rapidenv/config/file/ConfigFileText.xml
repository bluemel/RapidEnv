<beantype name="org.rapidbeans.rapidenv.config.file.ConfigFileText"
	extends="org.rapidbeans.rapidenv.config.file.ConfigFile">

	<description>An configuration operation on a single text file</description>

	<!-- has to be defined redundantly in order to define a specific XML binding -->
	<property name="tasks" type="association"
		composition="true"
		targettype="org.rapidbeans.rapidenv.config.ConfigurationTask">
		<description>Tasks serve extend the configuration.</description>
	</property>

	<xmlbinding>
		<property name="tasks">
			<beantype name="org.rapidbeans.rapidenv.config.file.ConfigFileTextTaskInsert"
				xmlelement="insert"/>
			<beantype name="org.rapidbeans.rapidenv.config.file.ConfigFileTextTaskDelete"
				xmlelement="delete"/>
			<beantype name="org.rapidbeans.rapidenv.config.file.ConfigFileTextTaskReplace"
				xmlelement="replace"/>
		</property>
	</xmlbinding>

	<codegen mode="split" implementation="strict"/>

</beantype>
