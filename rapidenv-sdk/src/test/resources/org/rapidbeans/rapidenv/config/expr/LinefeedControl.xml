<enumtype name="org.rapidbeans.rapidenv.config.expr.LinefeedControl">
	<enum name="preserve">
		<description>take the line feed from the file</description>
	</enum>
	<enum name="platform">
		<description>always use the platform specific line feed</description>
	</enum>
	<enum name="normalize">
		<description>always use \n as line feed</description>
	</enum>
</enumtype>
